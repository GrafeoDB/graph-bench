# Graph-Bench Environment Configuration
# Copy to .env and modify as needed

# ============================================
# SERVER DATABASES (Docker - fresh each run)
# ============================================

# Neo4j (Community Edition) - Cypher
GRAPH_BENCH_NEO4J_URI=bolt://localhost:7687
GRAPH_BENCH_NEO4J_USER=neo4j
GRAPH_BENCH_NEO4J_PASSWORD=benchmark

# Memgraph (with MAGE) - Cypher
# Uses different port to avoid Neo4j conflict
GRAPH_BENCH_MEMGRAPH_URI=bolt://localhost:7688

# ArangoDB - AQL
GRAPH_BENCH_ARANGO_URI=http://localhost:8529
GRAPH_BENCH_ARANGO_USER=root
GRAPH_BENCH_ARANGO_PASSWORD=benchmark
GRAPH_BENCH_ARANGO_DATABASE=benchmark

# TuGraph - Cypher (Bolt protocol)
# Uses port 7689 to avoid Neo4j/Memgraph conflict
GRAPH_BENCH_TUGRAPH_URI=bolt://localhost:7689
GRAPH_BENCH_TUGRAPH_USER=admin
GRAPH_BENCH_TUGRAPH_PASSWORD=73@TuGraph

# ============================================
# EMBEDDED DATABASES (no server needed)
# ============================================

# LadybugDB - Cypher
# Use :memory: for in-memory, or path for persistent
GRAPH_BENCH_LADYBUG_PATH=:memory:

# Grafeo - GQL
# Use :memory: for in-memory, or path for persistent
GRAPH_BENCH_GRAFEO_PATH=:memory:
